@model ShopingCard
@{
}
<form method="post">
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-lg-5 align-items-center">
             <input hidden asp-for="product.Id" />
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/@Model.product.Image" alt=".."width="600"height="700" /></div>
               <div class="col-md-6">
                    <div class="small mb-1">@Model.product.Category.Name</div>
                    <h1 class="display-5 fw-bolder">Shop item Now Click to Add Card</h1>
                    <div class="fs-5 mb-5">
                        <span class="text-decoration-line-through">$45.00</span>
                        <span>@Model.product.price</span>
                    </div>
                    <p class="lead">@Model.product.Description </p>
                    <div class="d-flex">
                        <input class="form-control text-center me-3"id="itemQuantity"asp-for="Count" style="max-width:3rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Add to Cart
                        </button>
                    </div>
                </div>
            
        </div>
    </div>

</section>
</form>