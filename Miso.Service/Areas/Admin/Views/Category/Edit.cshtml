@model Category
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "Edit Category";
}
<partial name="_Toster"></partial>

<h1>Edit</h1>
<form asp-action="Edit" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"> </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"> </label>
        <textarea id="mytextarea" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreatedTime"> </label>
        <input asp-for="CreatedTime" class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-warning">Back To Index</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
      tinymce.init({
        selector: '#mytextarea'
      });
    </script>
}
