@model Category

@{
    ViewBag.PageTitle="Category Management";
    ViewBag.CardTitle = "Delete Category";
}
<partial name="_Toster"></partial>

<h1>Delete</h1>
<form asp-action="DeleteCategory" method="post">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"> </label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"> </label>
        <input asp-for="Description"disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CreatedTime"> </label>
        <input asp-for="CreatedTime"disabled class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index"   class="btn btn-warning">Back To Index</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
