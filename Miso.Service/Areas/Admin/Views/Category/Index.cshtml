@model IEnumerable<Category>
@{
    ViewBag.PageTitle = "Category Management";
    ViewBag.CardTitle = "View Category";
}
<partial name="_Toster"></partial>
<div> 
<a class="btn btn-success" href="/Admin/Category/Create" class="btn btn-success">Create</a>
</div>
<table class="table table-hover" width="100%">
    <thead class="text-bold">   
       <tr>
        <td>
            Name
        </td>
        <td>
            Description

        </td>
        <td>
            Date Created
        </td>
        <td>
            Actions
        </td>
      </tr>
    </thead>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@Html.Raw(item.Description)</td>
            <td>@item.CreatedTime</td>
            <td>
                <a class="btn btn-success"href="/Admin/Category/Edit/@item.Id"class="btn btn-success">Edit</a>
            </td>
            <td>
               <a class="btn btn-danger"href="/Admin/Category/Delete/@item.Id"class="btn btn-success">Delete</a>

            </td>


        </tr>
    }
</table>